[user]
	name = kryota-dev
	email = {{ .email }}
	signingkey = {{ .signingkey }}
[core]
	excludesfile = ~/.gitignore_global
	editor = nvim
	ignorecase = false
[commit]
	template = ~/.stCommitMsg
	gpgsign = true
[gpg]
	format = ssh
[alias]
	ac = !git add -A && aicommits -a
[init]
	defaultBranch = main
[gpg "ssh"]
	program = /Applications/1Password.app/Contents/MacOS/op-ssh-sign
[extensions]
	worktreeConfig = true
